<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AwfulRedux.Styles">
    <SolidColorBrush x:Key="AwfulHeader" Color="#232323"/>
    <Color x:Key="AwfulStatusBar">#232323</Color>
    <Color x:Key="AwfulWebBackground">#000000</Color>
    <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
    <SolidColorBrush x:Key="MainPageBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ForumBackground" Color="#252526"/>
    <SolidColorBrush x:Key="ForumFontColor" Color="White"/>
    <SolidColorBrush x:Key="TitleFontColor" Color="#ffffff"/>
    <SolidColorBrush x:Key="ThreadColor" Color="#232323"/>
    <SolidColorBrush x:Key="HasSeenThreadColor" Color="#5C7AB7"/>
    <SolidColorBrush x:Key="TransparentThreadColor" Color="#9B232323"/>
    <SolidColorBrush x:Key="TransparentHasSeenThreadColor" Color="#9B5C7AB7"/>
    <Style x:Key="ForumBox" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"/>
    </Style>
    <Style x:Key="ForumThreadBox" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style x:Key="ForumTitleThreadBox" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style x:Key="ForumReplyThreadBox" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
    </Style>
</ResourceDictionary>
