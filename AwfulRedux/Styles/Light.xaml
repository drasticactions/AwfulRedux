<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AwfulRedux.Styles">
    <SolidColorBrush x:Key="AwfulHeader" Color="#FF1E72C9"/>
    <Color x:Key="AwfulStatusBar">#FF1E72C9</Color>
    <Color x:Key="AwfulWebBackground">#FFFFFF</Color>
    <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
    <SolidColorBrush x:Key="MainPageBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ForumBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ForumFontColor" Color="Black"/>
    <SolidColorBrush x:Key="TitleFontColor" Color="#ffffff"/>
    <SolidColorBrush x:Key="ThreadColor" Color="#d4e1ee"/>
    <SolidColorBrush x:Key="HasSeenThreadColor" Color="#C6D8FB"/>
    <SolidColorBrush x:Key="TransparentThreadColor" Color="#9BD4E1EE"/>
    <SolidColorBrush x:Key="TransparentHasSeenThreadColor" Color="#9B94B1EC"/>
    <Style x:Key="ForumBox" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"/>
    </Style>
    <Style x:Key="ForumThreadBox" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style x:Key="ForumTitleThreadBox" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style x:Key="ForumReplyThreadBox" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
    </Style>
</ResourceDictionary>
