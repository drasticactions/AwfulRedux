<Page
    x:Class="AwfulRedux.Views.ThreadListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AwfulRedux.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:AwfulRedux.ViewModels"
    xmlns:controls="using:Kimono.Controls"
    xmlns:threads="using:AwfulRedux.UI.Models.Threads"
    xmlns:controls1="using:Template10.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:Template10.Behaviors"
    xmlns:threads1="using:AwfulRedux.Tools.Threads"
    xmlns:controls2="using:AwfulRedux.Controls"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewModels:ThreadListPageViewModel />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:MasterDetailViewControl x:Name="previewControl" PreviewItem="{Binding Selected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <controls:MasterDetailViewControl.MasterViewPaneContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <controls1:PageHeader BackButtonVisibility="Collapsed" VisualStateNarrowMinWidth="-1" Content="{Binding Forum.Name, Mode=TwoWay}" Frame="{x:Bind Frame}">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:EllipsisBehavior Visibility="Collapsed" />
                        </interactivity:Interaction.Behaviors>
                    </controls1:PageHeader>
                    <ProgressBar IsIndeterminate="True" Visibility="{Binding ForumPageScrollingCollection.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Row="1"/>
                    <ListView x:Name="masterListBox"  SelectionChanged="MasterListBox_OnSelectionChanged" Grid.Row="2" SelectedItem="{Binding Selected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         ItemsSource="{Binding ForumPageScrollingCollection, UpdateSourceTrigger=PropertyChanged}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="threads:Thread">
                                <Grid Background="{x:Bind HasSeen, Converter={StaticResource HasSeenThreadConverter}}">
                                    <Grid.Transitions>
                                        <TransitionCollection>
                                            <EntranceThemeTransition/>
                                        </TransitionCollection>
                                    </Grid.Transitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Height="5"
                                  Background="{x:Bind IsSticky, Converter={StaticResource ThreadHeaderColorConverter}}" />
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="40" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <StackPanel Orientation="Vertical">
                                                <Border Margin="0,5,0,0" Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}" Width="40" Height="40">
                                                    <Image x:Phase="3"  Source="{x:Bind ImageIconLocation, Converter={StaticResource ForumImageConverter}, FallbackValue='/Assets/ThreadTags/noicon.png'}" />
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Column="1" >
                                            <Image Margin="0,0,10,0" Source="{Binding StoreImageIconLocation}" />
                                        </Grid>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock x:Phase="1" Style="{ThemeResource ForumTitleThreadBox}" FontFamily="{ThemeResource DefaultFont}" x:Name="ThreadTitle" TextWrapping="Wrap"
                                               Text="{x:Bind Name}" />
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Style="{ThemeResource ForumThreadBox}" FontFamily="{ThemeResource DefaultFont}" Text="Pages:" />
                                                <TextBlock x:Phase="2" Style="{ThemeResource ForumThreadBox}" FontFamily="{ThemeResource DefaultFont}" x:Name="TotalPages" Margin="5,0,0,0" Text="{x:Bind TotalPages}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Style="{ThemeResource ForumThreadBox}" FontFamily="{ThemeResource DefaultFont}" Text="Killed By:" Margin="0,0,0,0" />
                                                <TextBlock x:Phase="2" Style="{ThemeResource ForumThreadBox}" FontFamily="{ThemeResource DefaultFont}" Text="{x:Bind KilledBy}" Margin="5,0,0,0" />
                                            </StackPanel>
                                        </StackPanel>
                                        <TextBlock x:Phase="2" Grid.Column="3" VerticalAlignment="Center" Margin="2" Visibility="{x:Bind HasSeen, Converter={StaticResource BooleanToVisibilityConverter}}" Style="{ThemeResource ForumReplyThreadBox}" FontFamily="{ThemeResource DefaultFont}" x:Name="ReplyCount"
                                                   Text="{Binding RepliesSinceLastOpened}" />
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <CommandBar Grid.Row="3">
                        <AppBarButton Label="Refresh" Click="{x:Bind ViewModel.Refresh}" Icon="Refresh"/>
                    </CommandBar>
                </Grid>
            </controls:MasterDetailViewControl.MasterViewPaneContent>
            <controls:MasterDetailViewControl.DetailViewPaneContent>
                <controls2:ThreadView x:Name="ThreadPageView">
                    
                </controls2:ThreadView>
            </controls:MasterDetailViewControl.DetailViewPaneContent>
        </controls:MasterDetailViewControl>
    </Grid>
</Page>
