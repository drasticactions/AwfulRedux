<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="AwfulRedux.Mobile.Views.MainPage"
             Title="Forums">
  <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
    <StackLayout Orientation="Vertical" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" Spacing="0">
      <ListView x:Name="listView" IsPullToRefreshEnabled="True" IsGroupingEnabled="True" SelectedItem="{Binding SelectedForum, Mode=TwoWay}" GroupDisplayBinding="{Binding Name}" HeightRequest="200" ItemsSource="{Binding ForumCategories}" HasUnevenRows="true">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding Name}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </AbsoluteLayout>
</ContentPage>