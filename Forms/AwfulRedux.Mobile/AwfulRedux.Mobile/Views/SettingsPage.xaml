<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="AwfulRedux.Mobile.Views.SettingsPage">
  <ContentPage.Content>
    <ScrollView>
      <Grid Margin="0">
        <StackLayout Orientation="Vertical" Padding="0">
          <Grid Padding="0,0,0,5">
            <StackLayout Orientation="Vertical">
              <StackLayout Orientation="Horizontal">
                <Image Margin="5,10,0,0"
                HeightRequest="50"
                WidthRequest="50"
                Source="{Binding UserAvatar}"/>
                <Label VerticalOptions="Center" Text="{Binding LoginUserName}"></Label>
              </StackLayout>
              <Button Margin="15"
								BackgroundColor="#77D065"
								TextColor="White" Text="Login"></Button>
            </StackLayout>
          </Grid>

        </StackLayout>
      </Grid>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>